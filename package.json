{
    "name": "react-stateful-tabs",
    "version": "1.0.0-rc.8",
    "description": "Preserve the internal state of a component when itâ€™s hidden.",
    "author": "Eric Mantooth",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/erictooth/react-stateful-tabs.git"
    },
    "homepage": "https://github.com/erictooth/react-stateful-tabs/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/erictooth/react-stateful-tabs/issues"
    },
    "keywords": [
        "react",
        "state",
        "tabs"
    ],
    "scripts": {
        "prebuild": "npm-run-all lint",
        "build": "npm-run-all build:pika",
        "build:pika": "pika build",
        "lint": "eslint src --ext=ts,tsx",
        "prepublishOnly": "npm-run-all build",
        "storybook": "start-storybook"
    },
    "devDependencies": {
        "@erictooth/eslint-config": "^1.1.4",
        "@erictooth/prettier-config": "^2.0.0",
        "@pika/pack": "^0.5.0",
        "@pika/plugin-build-node": "^0.6.0",
        "@pika/plugin-build-web": "^0.6.0",
        "@pika/plugin-ts-standard-pkg": "^0.6.0",
        "@storybook/addon-storysource": "^5.1.9",
        "@storybook/react": "^5.1.9",
        "@testing-library/react": "^9.1.3",
        "@types/jest": "^24.0.18",
        "@types/react": "^16.9.0",
        "@types/storybook__react": "^4.0.2",
        "@typescript-eslint/parser": "^2.0.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "eslint": "^6.2.2",
        "jest": "^24.9.0",
        "jest-dom": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "react": "^16.9.0",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-dom": "^16.9.0",
        "ts-jest": "^24.0.2",
        "typescript": "^3.6.2"
    },
    "peerDependencies": {
        "react": "^16.8.0"
    },
    "prettier": "@erictooth/prettier-config",
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "env": {
            "browser": true
        },
        "extends": [
            "@erictooth/eslint-config",
            "@erictooth/eslint-config/react",
            "@erictooth/eslint-config/typescript"
        ],
        "rules": {
            "@typescript-eslint/explicit-function-return-type": "off",
            "@typescript-eslint/no-explicit-any": "off",
            "react/display-name": "off",
            "react/prop-types": "off",
            "@typescript-eslint/no-unused-vars": [
                "warn",
                {
                    "argsIgnorePattern": "^_"
                }
            ]
        }
    },
    "eslintIgnore": [
        "src/**/__tests__"
    ],
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-ts-standard-pkg"
            ],
            [
                "@pika/plugin-build-web"
            ],
            [
                "@pika/plugin-build-node"
            ]
        ]
    },
    "jest": {
        "collectCoverage": true,
        "coverageReporters": [
            "html",
            "json-summary"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "dependencies": {
        "fast-deep-equal": "^2.0.1"
    }
}
