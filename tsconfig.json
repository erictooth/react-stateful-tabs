{
    "exclude": ["./stories/**", "**/__tests__/**"],
    "include": ["src"],
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}
